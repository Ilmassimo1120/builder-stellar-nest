{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitReturns": false,
    "noImplicitThis": false
  },
  "include": [
    "client/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}