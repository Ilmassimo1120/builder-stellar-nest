{
  "name": "fusion-starter",
  "private": true,
  "type": "module",
  "pkg": {
    "assets": [
      "dist/spa/*"
    ],
    "scripts": [
      "dist/server/**/*.js"
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "vite build --config vite.config.server.ts",
    "build:optimized": "node scripts/optimize-build.js",
    "start": "node dist/server/node-build.mjs",
    "test": "vitest --run",
    "format.fix": "prettier --write .",
    "typecheck": "tsc --project tsconfig.dev.json",
    "typecheck:strict": "tsc",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/spa",
    "preview": "npm run build && npm start",
    "supabase:setup": "node scripts/setup-supabase.js",
    "supabase:types": "supabase gen types typescript --local > client/lib/database.types.ts",
    "audit-deps": "node dependency-audit.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-alert-dialog": "^1.1.1",
